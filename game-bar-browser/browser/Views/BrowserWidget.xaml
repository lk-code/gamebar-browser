<Page
    x:Class="browser.Views.BrowserWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:browser.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal">

                <Button
                    Width="32"
                    Height="32"
                    Margin="2">
                    <Viewbox MaxWidth="32" MaxHeight="32">
                        <SymbolIcon Symbol="Back" />
                    </Viewbox>
                </Button>

                <Button
                    Width="32"
                    Height="32"
                    Margin="2">
                    <Viewbox MaxWidth="32" MaxHeight="32">
                        <SymbolIcon Symbol="Forward" />
                    </Viewbox>
                </Button>

                <Button
                    Width="32"
                    Height="32"
                    Margin="2">
                    <Viewbox MaxWidth="32" MaxHeight="32">
                        <SymbolIcon Symbol="Refresh" />
                    </Viewbox>
                </Button>
            </StackPanel>

            <TextBox
                x:Name="BrowserWidget_HeaderUri_TextBox"
                x:Uid="BrowserWidget_HeaderUri_TextBox"
                Grid.Column="1"
                Height="32"
                Margin="2"
                Padding="5"
                FontSize="14"
                KeyUp="TextBox_KeyUp"
                PlaceholderText="__BrowserWidget_HeaderUri_TextBox__" />

            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Width="32"
                    Height="32"
                    Margin="2">
                    <Viewbox MaxWidth="32" MaxHeight="32">
                        <SymbolIcon Symbol="More" />
                    </Viewbox>
                </Button>

            </StackPanel>
        </Grid>

        <WebView
            x:Name="BrowserWidget_MainContent_WebView"
            Grid.Row="1"
            Source="https://www.bing.com" />

    </Grid>

</Page>
