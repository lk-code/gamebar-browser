<Page
    x:Class="browser.Views.BrowserWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:browser.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal">

                <Button
                    Width="40"
                    Height="40"
                    Margin="4">
                    <SymbolIcon Symbol="Back" />
                </Button>

                <Button
                    Width="40"
                    Height="40"
                    Margin="4">
                    <SymbolIcon Symbol="Forward" />
                </Button>

                <Button
                    Width="40"
                    Height="40"
                    Margin="4">
                    <SymbolIcon Symbol="Refresh" />
                </Button>
            </StackPanel>

            <TextBox
                x:Name="BrowserWidget_HeaderUri_TextBox"
                Grid.Column="1"
                Height="40"
                Margin="4"
                Padding="6"
                FontSize="18"
                KeyUp="TextBox_KeyUp"
                PlaceholderText="Webadresse suchen oder eingeben" />


            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Width="40"
                    Height="40"
                    Margin="4">
                    <SymbolIcon Symbol="Bookmarks" />
                </Button>

            </StackPanel>
        </Grid>

        <WebView
            x:Name="BrowserWidget_MainContent_WebView"
            Grid.Row="1"
            Source="https://www.bing.com" />

    </Grid>

</Page>
