<Page
    x:Class="browser.Views.BrowserWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:browser.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BoolToVisibilityConverter
            x:Key="BoolToVisibilityConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal">

                <Button
                    Width="32"
                    Height="32"
                    Margin="2"
                    CornerRadius="16">
                    <Viewbox MaxWidth="32" MaxHeight="32">
                        <SymbolIcon Symbol="Back" />
                    </Viewbox>
                </Button>

                <Button
                    Width="32"
                    Height="32"
                    Margin="2"
                    CornerRadius="16">
                    <Viewbox MaxWidth="32" MaxHeight="32">
                        <SymbolIcon Symbol="Forward" />
                    </Viewbox>
                </Button>

                <Button
                    Width="32"
                    Height="32"
                    Margin="2"
                    CornerRadius="16">
                    <Viewbox MaxWidth="32" MaxHeight="32">
                        <SymbolIcon Symbol="Refresh" />
                    </Viewbox>
                </Button>

                <Button
                    Width="32"
                    Height="32"
                    Margin="2"
                    CornerRadius="16"
                    Visibility="{Binding ShowHomepageButton, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}">
                    <Viewbox MaxWidth="32" MaxHeight="32">
                        <SymbolIcon Symbol="Home" />
                    </Viewbox>
                </Button>
            </StackPanel>

            <AutoSuggestBox
                x:Name="BrowserWidget_HeaderUriAutoSuggestBox"
                x:Uid="BrowserWidget_HeaderUriAutoSuggestBox"
                Grid.Column="1"
                Height="32"
                Margin="2,4"
                Padding="5"
                AutomationProperties.Name="Browser Adress AutoSuggestBox"
                FontSize="14"
                ItemsSource="{Binding AdressBarSuggestValues}"
                PlaceholderText="__BrowserWidget_HeaderUriAutoSuggestBox_PlaceholderText__"
                Text="{Binding AdressBarDisplayText, Mode=TwoWay}">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="KeyUp">
                        <core:InvokeCommandAction Command="{Binding AdressBarKeyUpCommand}" />
                    </core:EventTriggerBehavior>
                    <core:EventTriggerBehavior EventName="SuggestionChosen">
                        <core:InvokeCommandAction Command="{Binding AdressBarSuggestionChosenCommand}" />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
            </AutoSuggestBox>

            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Width="32"
                    Height="32"
                    Margin="2">
                    <Viewbox MaxWidth="32" MaxHeight="32">
                        <SymbolIcon Symbol="More" />
                    </Viewbox>

                    <Button.Flyout>
                        <muxc:CommandBarFlyout x:Name="AppMenuCommandBarFlyout" Placement="RightEdgeAlignedBottom">
                            <AppBarButton
                                x:Name="BrowserWidget_AppMenuCommandBarFlyout_ShareButton"
                                x:Uid="BrowserWidget_AppMenuCommandBarFlyout_ShareButton"
                                Command="{Binding OpenShareMenuCommand}"
                                Icon="Share"
                                Label="__BrowserWidget_AppMenuCommandBarFlyout_ShareButton_Label__"
                                ToolTipService.ToolTip="__BrowserWidget_AppMenuCommandBarFlyout_ShareButton_ToolTipService_ToolTip__" />
                            <muxc:CommandBarFlyout.SecondaryCommands>
                                <AppBarButton
                                    x:Name="BrowserWidget_AppMenuCommandBarFlyout_FeedbackButton"
                                    x:Uid="BrowserWidget_AppMenuCommandBarFlyout_FeedbackButton"
                                    Label="__BrowserWidget_AppMenuCommandBarFlyout_FeedbackButton_Label__" />
                                <AppBarButton
                                    x:Name="BrowserWidget_AppMenuCommandBarFlyout_SettingsButton"
                                    x:Uid="BrowserWidget_AppMenuCommandBarFlyout_SettingsButton"
                                    Command="{Binding OpenSettingsCommand}"
                                    Label="__BrowserWidget_AppMenuCommandBarFlyout_SettingsButton_Label__" />
                            </muxc:CommandBarFlyout.SecondaryCommands>
                        </muxc:CommandBarFlyout>
                    </Button.Flyout>

                </Button>

            </StackPanel>
        </Grid>

        <WebView
            x:Name="BrowserWidget_MainContent_WebView"
            Grid.Row="1"
            Source="{Binding WebViewAdressSource, Mode=TwoWay}">
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="NavigationStarting">
                    <core:InvokeCommandAction Command="{Binding WebViewSourceChangingCommand}" />
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </WebView>

    </Grid>

</Page>
